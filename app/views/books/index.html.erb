<p id="notice"><%= notice %></p>

<h1>Books</h1>

<% @books.each do |book| %>

<p><%= book.title %></p>
<p><%= book.body %></p>

<span><%= link_to "show", show_book_path(book.id) %></span>
<span><%= link_to "edit", edit_book_path(book.id) %></span>
<span><%= link_to "delete", destroy_book_path(book.id), method: :delete, "data-confirm" => "Are you sure?" %></span>


<% end %>






<%= form_with model: @book, url: '/books', method: :post, local:true do |f| %>

<div class="field">
<label for="book_title">Title</label>
<%= f.text_field :title %></div>

<div class="field">
<label for="book_body">Body</label><div>

<%= f.text_area :body %>

<div class="actions"><%= f.submit 'Create Book' %></div>





<% end %>