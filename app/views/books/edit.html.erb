<h1>Editing Book</h1>

<%= form_with model: @book, url: update_book_path(@book.id), method: :patch, local:true do |f| %>

<div class="field">
<label for="book_title">Title</label>
<%= f.text_field :title %>
</div>
<div class="field">
<label for="book_body">Body</label>
<%= f.text_area :body %>
</div>
<div class="actions"><%= f.submit 'Update Book' %></div>

<span><%= link_to "show", show_book_path(@book.id) %></span>
 |
<spen><a href = "/books">Back</a></spen>



<% end %>


